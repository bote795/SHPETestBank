=content_for(:title, "Tests")
= link_to 'New Class test name', new_test_entry_path, :class => "btn btn-default"
%br
%br
%table.table.table-striped.table-hover
  %tr
    %th Class Name
    %th Test
    %th Teacher
    %th Semester
    %th Link
    %th
    %th
    %th

  - @test_entries.each do |test_entry|
    %tr
      %td= ClassName.find(test_entry.className_id).name
      %td= ClassTestName.find(test_entry.classTestName_id).name
      %td= test_entry.teacher
      %td= test_entry.semester
      %td= link_to 'Exam', test_entry.link, :class => "btn btn-link"
      %td= link_to 'Show', test_entry, :class => "btn btn-link"
      %td= link_to 'Edit', edit_test_entry_path(test_entry), :class => "btn btn-link"
      %td= link_to 'Destroy', test_entry, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-link"
