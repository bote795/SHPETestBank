=content_for(:title, "Test Bank")
= stylesheet_link_tag  "//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css"
= stylesheet_link_tag "//cdn.datatables.net/responsive/1.0.6/css/dataTables.responsive.css"
#TestBank
  %input.search{:placeholder => "Search"}/
  %button.sort.btn.btn-default{"data-sort" => "course"}
    Sort by courses

  %table.table.table-striped.table-hover#test
    %thead
      %th.sort{"data-sort" => "course"} Course
      %th Total
      - @ExamNames.each do |exam|
        %th= exam.name
    
    %tbody.list
      - @classes.each do |key,value|
        %tr
          %td.course= link_to key.name, detail_test_entries_path(:id => key.id), :class => "btn btn-link course"
          -value.each do |k, v|
            %td= v        
