=content_for(:div, 0)
.container-full
  .row
    .col-lg-4.text-center.v-center
      %h1{:class => "title"} SHPE Test Bank
      %p.lead Be prepared for your test
      %br/
    

 
      = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'col-lg-12 login form form-horizontal'}) do |f|
        .form-group
          = f.label :email, :class => "col-sm-2 control-label"
          = f.email_field :email, autofocus: true
        .form-group
          = f.label :password,  :class => "col-sm-2 control-label"
          = f.password_field :password, autocomplete: "off"
        - if devise_mapping.rememberable?
          .form-group
            .col-sm-offset-2.col-sm-10
              %label
                %input{:type => "checkbox"}/
                Remember me
        %br/
        %br/
        .actions
          =f.submit 'Log in',:class => "btn btn-lg btn-primary"
      = render "devise/shared/links" 
      = link_to "Sign Out", destroy_user_session_path, :method => :delete      
        
  / /row
