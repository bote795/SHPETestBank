.container-full
  .row
    .text-center.v-center.log-in
      %h1{:class => "title"} SHPE Test Bank
      %h3.lead 
        Be 
        %strong Ready 
        for your 
        %strong Test
      = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form form-horizontal'}) do |f|
        .form-group
          .col-xs-12
            .input-group.margin-bottom-sm
              %span.input-group-addon
                %span.glyphicon.glyphicon-envelope
              = f.email_field :email, autofocus: true, :class => "form-control input-lg", :placeholder => "Email", :title => "You need to be a paid member in order to log in"
        .form-group
          .col-xs-12
            .input-group.margin-bottom-sm
              %span.input-group-addon
                %span.glyphicon.glyphicon-eye-open
              = f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :placeholder => "Password"
        - if devise_mapping.rememberable?
          .form-group
            %label
              %input{:type => "checkbox"}/
              Remember me






        .actions
          =f.submit 'Log in',:class => "btn btn-lg btn-primary", :style => "color: white !important;"
      = render "devise/shared/links" 
        
  / /row
  .row
    .col-lg-12.text-center.v-center{:style => "font-size:39pt;"}
