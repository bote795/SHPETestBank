= form_for @class_name do |f|
  - if @class_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@class_name.errors.count, "error")} prohibited this class_name from being saved:"
      %ul
        - @class_name.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
