= form_for @member_email, :html =>  {class: "form-horizontal"} do |f|
  - if @member_email.errors.any?
    #error_explanation
      %h2= "#{pluralize(@member_email.errors.count, "error")} prohibited this member_email from being saved:"
      %ul
        - @member_email.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .field
      = f.label :email, class: "col-lg-1 control-label"
      .col-lg-10 
        = f.email_field :email, class: "form-control" 
  .form-group
    .col-lg-10.col-lg-offset-1
      .actions
        = link_to 'Cancel', member_emails_path, class: "btn btn-danger"
        = f.submit 'Save', class: "btn btn-primary"
