%br
%table.table.table-striped.table-hover
  %tr
    %th Name
    %th
    %th
    %th

  - @class_test_names.each do |class_test_name|
    %tr
      %td= class_test_name.name
      %td= link_to 'Show', class_test_name, :class => "btn btn-link"
      %td= link_to 'Edit', edit_class_test_name_path(class_test_name), :class => "btn btn-link"
      %td= link_to 'Destroy', class_test_name, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-link"
