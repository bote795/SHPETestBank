= form_for @class_test_name, :html =>  {class: "form-horizontal"} do |f|
  - if @class_test_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@class_test_name.errors.count, "error")} prohibited this class_test_name from being saved:"
      %ul
        - @class_test_name.errors.full_messages.each do |msg|
          %li= msg
  .form-group        
    .field
      = f.label :name, class: "col-lg-1 control-label"
      .col-lg-10  
        = f.text_field :name, class: "form-control"
  .form-group
    .col-lg-10.col-lg-offset-1
      .actions
        = link_to 'Cancel', class_test_names_path, class: "btn btn-danger"
        = f.submit 'Save', class: "btn btn-primary"

