.container-full
  .row
    .text-center.v-center.log-in
      %h1{:class => ""} Sign Up
      %h3.lead 
        You must be a
        %strong Paid Member 
        in order to be able to 
        %strong Sign Up
      = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form form-horizontal'}) do |f|
        = devise_error_messages!
        .form-group
          .col-xs-12
            .input-group.margin-bottom-sm
              %span.input-group-addon
                %span.glyphicon.glyphicon-envelope
              = f.email_field :email, autofocus: true, :class => "form-control input-lg", :placeholder => "Email", :title => "You need to be a paid member in order to log in"
        .form-group
          .col-xs-12
            .input-group.margin-bottom-sm
              %span.input-group-addon
                %span.glyphicon.glyphicon-eye-open
              = f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :placeholder => "Password (#{@minimum_password_length} characters minimum)"
        .form-group
          .col-xs-12
            .input-group.margin-bottom-sm
              %span.input-group-addon
                %span.glyphicon.glyphicon-eye-open
              = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-lg", :placeholder => "Confirm Password"
       


        .actions
          =f.submit 'Sign Up',:class => "btn btn-lg btn-success", :style => "color: white !important;"
      %p
        Already have an account?
        = render "devise/shared/links" 
        
/ /container full
